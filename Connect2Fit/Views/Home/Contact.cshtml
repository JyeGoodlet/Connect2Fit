@model Connect2Fit.Models.EmailModel
@{
    ViewBag.Title = "Contact Us";
    ViewBag.BodyClass = "contact";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<div class="panel-body">
    @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "form", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                @Html.LabelFor(m => m.FromName, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.FromName, new { @class = "form-control", placeholder = "e.g. John Smith" })
                @Html.ValidationMessageFor(m => m.FromName)
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                @Html.LabelFor(m => m.FromEmail, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", placeholder = "someone@example.com" })
                @Html.ValidationMessageFor(m => m.FromEmail)
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                @Html.LabelFor(m => m.Message, new { @class = "control-label" })
                @Html.TextAreaFor(m => m.Message, new { @class = "form-control", placeholder = "Your message goes here..." })
                @Html.ValidationMessageFor(m => m.Message)
            </div>
        </div>

        if (!ViewData.ModelState.IsValid)
        {
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    @Html.ValidationSummary(true)
                </div>
            </div>
        }

        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <input type="submit" class="btn btn-info col-sm-12" value="Send Message" />
            </div>
        </div>
    }
</div>

@section NavLinks
{
    @{ Html.RenderPartial("_ContactNavLinks"); }
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
