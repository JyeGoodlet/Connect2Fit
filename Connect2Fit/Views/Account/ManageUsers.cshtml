@model IEnumerable<DBUsersModel>
@using PagedList
@using PagedList.Mvc
@using Connect2Fit.Models;
@{
    ViewBag.Title = "Manage Users";
}

@if (User.IsInRole("Administrator"))
{

    int pageNumber = ViewBag.PageNumber;
    int pageSize = ViewBag.PageSize;

    IPagedList<DBUsersModel> pagedList = new PagedList<DBUsersModel>(Model, pageNumber, pageSize);


    <h2>@ViewBag.Title.</h2>

    <table class="table">
        <tr>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th>
                Name
            </th>
            <th>
                Account Type
            </th>
            <th>
                Reset Password
            </th>
            <th></th>
        </tr>

        @foreach (var user in pagedList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => user.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Name)
                </td>
                <td>

                    @Html.DisplayFor(modelItem => user.RoleName)                
                </td>
                <td>
                    Reset Password
                </td>
                <td>
                </td>
            </tr>
        }

    </table>

    <div class="pagerDiv">
        Page @(pagedList.PageCount < pagedList.PageNumber ? 0 : pagedList.PageNumber) of @pagedList.PageCount
        @Html.PagedListPager(pagedList, page => Url.Action("ManageUsers", new { pageNumber = page }))
    </div>
}
else
{
    <h3>You are not authorised to view this page. Please log in. </h3>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
