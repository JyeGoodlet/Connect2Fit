
@model ApplicationUser
@using Connect2Fit.Models;
@{
    ViewBag.Title = "Reset User Password";
}

<h2>@ViewBag.Title.</h2>
<h3> This user will be emailed a new autogenerated password. Hit Email Password to continue!</h3>
@if (User.IsInRole("Administrator"))
{
    using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.Id, htmlAttributes: new { style = "display: none;" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.Id, new { htmlAttributes = new { style = "display: none;" } })

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "col-md-offset-1 col-md-1" })
                <span class="col-md-1">@Html.DisplayFor(model => model.UserName)</span>
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { style = "display: none;" } })

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-md-offset-1 col-md-1" })
                <span class="col-md-1">@Html.DisplayFor(model => model.Email)</span>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { style = "display: none;" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-md-offset-1 col-md-1" })
                <span class="col-md-1">@Html.DisplayFor(model => model.Name)</span>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { style = "display: none;" } })
            </div>

            <div class="form-group">
                <div class="col-md-offset-1">
                    <input type="submit" class="btn btn-default" value="Email Password" />
                </div>
            </div>
        </div>
    }
}
else
{
    <h3>You are not authorised to view this page. Please log in. </h3>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

